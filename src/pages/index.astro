  await i18next.init({
    lng: 'ko',
    fallbackLng: 'ko',
    resources: {
      ko: {
        common: await import('../../public/locales/ko/common.json')
      },
      en: {
        common: await import('../../public/locales/en/common.json')
      }
    }
  });
}

const lang = getLangFromUrl(Astro.url);
const t = getTranslation(lang);
