---
import BaseHead from '../../components/BaseHead.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../../consts';
import { t } from '../../utils/i18n';

const lang = 'en';
---

<!doctype html>
<html lang={lang}>
	<head>
		<BaseHead title={`${t("about.title", lang)} | ${SITE_TITLE}`} description={t("about.description", lang)} />
	</head>
	<body>
		<Header />
		<main id="main-content" class="container mx-auto px-4 py-8">
			<div class="max-w-4xl mx-auto">
				<!-- Hero Section -->
				<section class="text-center mb-16">
					<div class="relative mb-8">
						<img 
							src="/assets/img/avatar.jpg" 
							alt="Jay Lee Profile" 
							class="w-32 h-32 rounded-full mx-auto border-4 border-primary-200 dark:border-primary-700 shadow-lg"
						/>
					</div>
					<h1 class="text-4xl font-bold mb-4 bg-gradient-to-r from-primary-600 to-primary-800 bg-clip-text text-transparent">
						{t("about.pageTitle", lang)}
					</h1>
					<p class="text-xl text-gray-600 dark:text-gray-300 mb-2">
						{t("about.tagline", lang)}
					</p>
					<p class="text-lg text-gray-500 dark:text-gray-400">
						{t("about.tagline2", lang)}
					</p>
				</section>

				<!-- Professional Summary -->
				<section class="mb-16">
					<h2 class="text-3xl font-bold mb-8 text-center">{t("about.title", lang)}</h2>
					<div class="bg-white dark:bg-gray-800 rounded-xl shadow-sm border border-gray-200 dark:border-gray-700 p-8">
						<p class="text-lg text-gray-700 dark:text-gray-300 leading-relaxed mb-6">
							{t("about.description", lang)}
						</p>
						<div class="grid md:grid-cols-2 gap-8">
							<div>
								<h3 class="text-xl font-semibold mb-4 text-primary-600 dark:text-primary-400">Tech Expertise</h3>
								<ul class="space-y-2 text-gray-600 dark:text-gray-400">
									<li>• Embedded Linux Systems</li>
									<li>• Container Technologies (Docker, Kubernetes)</li>
									<li>• Automotive Software (AUTOSAR)</li>
									<li>• Full-stack Development</li>
									<li>• DevOps & CI/CD</li>
								</ul>
							</div>
							<div>
								<h3 class="text-xl font-semibold mb-4 text-primary-600 dark:text-primary-400">Interests</h3>
								<ul class="space-y-2 text-gray-600 dark:text-gray-400">
									<li>• Software Architecture</li>
									<li>• Open Source Technologies</li>
									<li>• Basketball (FIBA 3x3 Player)</li>
									<li>• Tech Blogging</li>
									<li>• Continuous Learning</li>
								</ul>
							</div>
						</div>
					</div>
				</section>

				<!-- Education -->
				<section class="mb-16">
					<h2 class="text-3xl font-bold mb-8 text-center">{t("about.education", lang)}</h2>
					<div class="space-y-6">
						<div class="bg-white dark:bg-gray-800 rounded-xl shadow-sm border border-gray-200 dark:border-gray-700 p-6">
							<h3 class="text-xl font-semibold mb-2">{t("about.masters", lang)}</h3>
							<p class="text-primary-600 dark:text-primary-400 font-medium mb-2">{t("about.vehicularComm", lang)}</p>
							<p class="text-gray-600 dark:text-gray-400">Advanced research in wireless communication systems for automotive applications</p>
						</div>
						<div class="bg-white dark:bg-gray-800 rounded-xl shadow-sm border border-gray-200 dark:border-gray-700 p-6">
							<h3 class="text-xl font-semibold mb-2">{t("about.bachelor", lang)}</h3>
							<p class="text-gray-600 dark:text-gray-400">Foundation in electrical engineering and computer systems</p>
						</div>
					</div>
				</section>

				<!-- Career Experience -->
				<section class="mb-16">
					<h2 class="text-3xl font-bold mb-8 text-center">{t("about.career", lang)}</h2>
					<div class="space-y-6">
						<div class="bg-white dark:bg-gray-800 rounded-xl shadow-sm border border-gray-200 dark:border-gray-700 p-6">
							<div class="flex flex-col md:flex-row md:items-center md:justify-between mb-4">
								<div>
									<h3 class="text-xl font-semibold">{t("about.leadSDE", lang)}</h3>
									<p class="text-primary-600 dark:text-primary-400 font-medium">Sonatus Inc.</p>
								</div>
								<span class="text-gray-500 dark:text-gray-400 text-sm md:text-base">2022 - {t("about.present", lang)}</span>
							</div>
							<p class="text-gray-600 dark:text-gray-400 mb-2">{t("about.workFromHome", lang)}</p>
							<p class="text-gray-700 dark:text-gray-300">{t("about.sonatusDesc", lang)}</p>
						</div>
						
						<div class="bg-white dark:bg-gray-800 rounded-xl shadow-sm border border-gray-200 dark:border-gray-700 p-6">
							<div class="flex flex-col md:flex-row md:items-center md:justify-between mb-4">
								<div>
									<h3 class="text-xl font-semibold">{t("about.assistantManager", lang)}</h3>
									<p class="text-primary-600 dark:text-primary-400 font-medium">LG Electronics</p>
								</div>
								<span class="text-gray-500 dark:text-gray-400 text-sm md:text-base">2019 - 2022</span>
							</div>
							<p class="text-gray-600 dark:text-gray-400 mb-2">{t("about.seoul", lang)}</p>
							<p class="text-gray-600 dark:text-gray-400 mb-2">{t("about.swSolutionDivision", lang)}</p>
							<p class="text-gray-700 dark:text-gray-300">{t("about.autronDesc", lang)}</p>
						</div>
					</div>
				</section>

				<!-- Basketball Career -->
				<section class="mb-16">
					<h2 class="text-3xl font-bold mb-8 text-center">{t("about.basketball", lang)}</h2>
					<div class="bg-gradient-to-r from-orange-50 to-red-50 dark:from-orange-900/20 dark:to-red-900/20 rounded-xl p-6 border border-orange-200 dark:border-orange-800">
						<div class="space-y-4">
							<div class="flex items-center gap-4">
								<div class="w-12 h-12 bg-orange-500 rounded-full flex items-center justify-center">
									<svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 24 24">
										<path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zM7.07 18.28c.43-.9 3.05-1.78 4.93-1.78s4.51.88 4.93 1.78C15.57 19.36 13.86 20 12 20c-1.86 0-3.57-.64-4.93-1.72zm11.29-1.45c-1.43-1.74-4.9-2.33-6.36-2.33s-4.93.59-6.36 2.33C4.62 15.49 4 13.82 4 12c0-4.41 3.59-8 8-8s8 3.59 8 8c0 1.82-.62 3.49-1.64 4.83z"/>
									</svg>
								</div>
								<div>
									<h3 class="text-xl font-semibold">{t("about.representative", lang)}</h3>
									<p class="text-gray-600 dark:text-gray-400">{t("about.anyangCity", lang)}</p>
								</div>
							</div>
							<div class="flex items-center gap-4">
								<div class="w-12 h-12 bg-red-500 rounded-full flex items-center justify-center">
									<svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 24 24">
										<path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
									</svg>
								</div>
								<div>
									<h3 class="text-xl font-semibold">{t("about.fibaPlayer", lang)}</h3>
									<p class="text-gray-600 dark:text-gray-400">{t("about.teamYanadoo", lang)}</p>
									<p class="text-sm text-gray-500 dark:text-gray-500">{t("about.koreaRank", lang)}</p>
								</div>
							</div>
						</div>
					</div>
				</section>

				<!-- Contact Links -->
				<section class="text-center">
					<h2 class="text-3xl font-bold mb-8">{t("about.links", lang)}</h2>
					<p class="text-gray-600 dark:text-gray-400 mb-8">{t("about.connectMessage", lang)}</p>
					<div class="flex justify-center gap-6 flex-wrap">
						<a 
							href="https://github.com/jayleekr" 
							target="_blank"
							class="flex items-center gap-2 px-6 py-3 bg-gray-900 dark:bg-gray-700 text-white rounded-lg hover:bg-gray-800 dark:hover:bg-gray-600 transition-colors"
						>
							<svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
								<path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
							</svg>
							GitHub
						</a>
						<a 
							href="https://linkedin.com/in/jayleekr" 
							target="_blank"
							class="flex items-center gap-2 px-6 py-3 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors"
						>
							<svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
								<path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
							</svg>
							LinkedIn
						</a>
						<a 
							href="mailto:jay@jayleekr.com" 
							class="flex items-center gap-2 px-6 py-3 bg-green-600 text-white rounded-lg hover:bg-green-700 transition-colors"
						>
							<svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
							</svg>
							Email
						</a>
					</div>
				</section>
			</div>
		</main>
		<Footer />
	</body>
</html>