---
import BaseHead from '../../components/BaseHead.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import CategoryHierarchy from '../../components/CategoryHierarchy.astro';
import { getCollection } from 'astro:content';

const allBlogPosts = await getCollection('blog', ({ data }) => {
  return data.lang === 'en';
});
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <BaseHead title="Categories" description="Browse blog posts by category" />
  </head>
  <body>
    <Header />
    <main id="main-content" class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
      <div class="text-center mb-12">
        <h1 class="text-4xl font-bold text-gray-900 dark:text-white mb-4">
          Categories
        </h1>
        <p class="text-lg text-gray-600 dark:text-gray-300 max-w-2xl mx-auto">
          Explore my thoughts and experiences organized by topic
        </p>
      </div>
      
      <CategoryHierarchy posts={allBlogPosts} lang="en" />
    </main>
    <Footer />
  </body>
</html>