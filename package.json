{
  "name": "agreeable-ablation",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "dev": "astro dev",
    "build": "astro check && astro build",
    "preview": "astro preview",
    "astro": "astro",
    "test": "vitest run",
    "test:unit": "vitest run",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:watch": "vitest --watch",
    "type-check": "astro check",
    "lint": "eslint src --ext .ts,.astro",
    "format": "prettier --write src/**/*.{ts,astro,md}",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:report": "playwright show-report",
    "test:e2e:debug": "PWDEBUG=1 playwright test",
    "test:lighthouse": "npx lhci autorun",
    "test:percy": "percy exec -- npm run test:e2e",
    "test:all": "npm run test && npm run test:e2e && npm run test:lighthouse",
    "test:coverage:all": "npm run test:coverage && npm run test:e2e",
    "test:launch": "npm run type-check && npm run test && npm run build",
    "validate:launch": "node scripts/launch-validation.mjs",
    "reduce-emojis": "node scripts/reduce-emojis.mjs",
    "reduce-emojis:dry-run": "node scripts/reduce-emojis.mjs --dry-run",
    "reduce-emojis:aggressive": "node scripts/reduce-emojis.mjs --aggressive",
    "audit": "bun audit",
    "audit:fix": "bun audit --fix",
    "deps:update": "bun update",
    "deps:check": "bun outdated"
  },
  "dependencies": {
    "@astrojs/mdx": "^4.3.1",
    "@astrojs/rss": "^4.0.12",
    "@astrojs/sitemap": "^3.4.1",
    "@notionhq/notion-mcp-server": "^1.8.1",
    "astro": "^5.12.3",
    "astro-i18next": "^1.0.0-beta.21",
    "i18next": "^25.3.2",
    "mermaid": "^11.9.0",
    "remark-mermaid": "^0.2.0",
    "sharp": "^0.34.3"
  },
  "devDependencies": {
    "@astrojs/check": "^0.9.4",
    "@astrojs/tailwind": "^6.0.2",
    "@axe-core/playwright": "^4.10.2",
    "@percy/cli": "^1.31.1",
    "@percy/playwright": "^1.0.8",
    "@playwright/test": "^1.54.1",
    "@tailwindcss/typography": "^0.5.16",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.31.0",
    "eslint-formatter-compact": "^8.40.0",
    "jsdom": "^26.1.0",
    "lighthouse": "^12.8.0",
    "lighthouse-ci": "^1.13.1",
    "playwright": "^1.54.1",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  }
}
